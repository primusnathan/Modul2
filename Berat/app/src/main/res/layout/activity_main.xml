<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masukkan Tinggi Badan"
        android:id="@+id/txttinggi"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edittinggi"
        android:layout_below="@+id/txttinggi"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oke"
        android:id="@+id/btnOk"
        android:layout_below="@+id/edittinggi"
        android:layout_centerHorizontal="true"
        android:background="#f3ef"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Berat Badan Ideal Pria "
        android:id="@+id/txtpria"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnOk"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editpria"
        android:layout_below="@+id/txtpria"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/edittinggi"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Berat Badan Ideal Wanita"
        android:id="@+id/txtwanita"
        android:layout_below="@+id/editpria"
        android:layout_alignParentStart="true"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editwanita"
        android:layout_below="@+id/txtwanita"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>